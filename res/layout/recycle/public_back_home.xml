<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:gravity="center" 
	android:orientation="horizontal">
		
     <ImageView
         android:id="@+id/background"
         android:layout_width="@dimen/x157"
         android:layout_height="@dimen/y115"
         android:background="@mipmap/ic_public_background"
         android:gravity="center" 
         android:orientation="horizontal"/>

     <RelativeLayout
         android:id="@+id/back_home"
         android:layout_width="@dimen/x149"
         android:layout_height="@dimen/y109"
         android:background="@mipmap/ic_public_back_home_volume"
         android:layout_marginTop="@dimen/y2"
         android:layout_marginLeft="@dimen/x4"
         android:orientation="horizontal" >

         <ImageView
             android:id="@+id/back"
             android:layout_width="@dimen/x29"
             android:layout_height="@dimen/y22"
             android:background="@mipmap/ic_public_back"
             android:layout_marginTop="@dimen/y16"
             android:layout_marginLeft="@dimen/x59"/>

         <ImageView
             android:id="@+id/home"
             android:layout_width="@dimen/x27"
             android:layout_height="@dimen/y20"
             android:layout_marginTop="@dimen/y76"
             android:layout_marginLeft="@dimen/x59"
             android:background="@mipmap/ic_public_home"/>

         <ImageView
             android:id="@+id/volume_sub"
             android:layout_width="@dimen/x28"
             android:layout_height="@dimen/y20"
             android:layout_marginTop="@dimen/y47"
             android:layout_marginLeft="@dimen/x17"
             android:background="@mipmap/ic_public_volume_sub" />
         <ImageView
             android:id="@+id/volume_add"
             android:layout_width="@dimen/x28"
             android:layout_height="@dimen/y20"
             android:layout_marginTop="@dimen/y47"
             android:layout_marginLeft="@dimen/x105"
             android:background="@mipmap/ic_public_volume_add" />
             
         <TextView
             android:id="@+id/volume_num"
             android:layout_width="@dimen/x21"
             android:layout_height="@dimen/y16"
             android:layout_marginTop="@dimen/y49"
             android:layout_marginLeft="@dimen/x64"
             android:textSize="@dimen/x16"
             android:textColor="#000"/>
    </RelativeLayout>

</RelativeLayout>
