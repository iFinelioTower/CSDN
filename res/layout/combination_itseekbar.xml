<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"    
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal" 
    >

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="0.2"
        android:layout_gravity="center"
        android:src="@mipmap/ic_notification_brightness_down"
        />

    <SeekBar
        android:id="@+id/seekBar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="0.8"
        android:layout_gravity="center"

        android:maxHeight="15dp"
        android:minHeight="15dp"
        android:splitTrack="false"
        android:progressDrawable="@drawable/ic_notification_brightness_seekbar"
        android:thumb="@mipmap/ic_notification_brightness_seekbar_point"
        />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="0.2"
        android:layout_gravity="center"
        android:src="@mipmap/ic_notification_brightness_up"
        />
</LinearLayout>